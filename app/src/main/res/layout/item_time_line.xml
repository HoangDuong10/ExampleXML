<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:layout_marginTop="@dimen/define_dimen_6"
        android:id="@+id/ivCircle"
        android:layout_width="@dimen/define_dimen_10"
        android:layout_height="@dimen/define_dimen_10"
        android:src="@drawable/ic_circle"
        app:tint="@color/green"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/text_size_normal"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        custom:layout_constraintStart_toEndOf="@+id/ivCircle"
        custom:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/define_dimen_12"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginStart="@dimen/define_dimen_8"
        custom:layout_constraintStart_toEndOf="@+id/ivCircle"
        custom:layout_constraintTop_toBottomOf="@id/tvTitle"
       />


    <com.example.layout.widget.DividerView
        android:layout_width="@dimen/define_dimen_10"
        android:layout_height="0dp"
        android:layerType="software"
        custom:color="@color/green"
        custom:dashGap="@dimen/define_dimen_2"
        custom:dashLength="@dimen/define_dimen_6"
        custom:dashThickness="1dp"
        custom:layout_constraintBottom_toBottomOf="@id/tvTime"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/ivCircle"
        custom:orientation="vertical" />


</androidx.constraintlayout.widget.ConstraintLayout>